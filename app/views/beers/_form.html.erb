<%= form_for @beer do |f| %>
<table>
<tr><td>Beer name:</td><td><%= f.text_field :name, size: "6x10"%></td></tr>
<tr><td>Brewery:</td><td><%= f.text_field :brewery, size: "6x10" %></td></tr>
<tr><td>Vol%:</td><td><%= f.text_field :vol, size: "2x10" %></td></tr>
<tr><td>Description:</td><td><%= f.text_field :description, size: "20x20" %></td></tr>
<tr><td colspan="2"><%= f.submit 'Create' %></td></tr>
</table>
<% end %>
